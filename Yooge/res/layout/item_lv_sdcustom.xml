<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/im_goods_sd_c"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="centerCrop"
                android:src="@drawable/picture1" />

            <ImageView
                android:id="@+id/im_cq_order"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:id="@+id/ll_store_hint_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_name_sd_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:ems="10"
                    android:maxEms="10"
                    android:singleLine="true"
                    android:text="吊牌"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_time_sd_c"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="2015-09-12"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单价:"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_price_sd_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="100元"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_nub_lcs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="48dp"
                    android:text="x1"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp05"
                android:layout_marginTop="8dp"
                android:background="@color/postgrey" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="共"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_count_sd_c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="31"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="件,"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="合计:"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_all_sd_c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="27.6元"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_showmores_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="更多"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/im_mores_c"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/arrows_down" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_mores_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <com.femto.ugershop.view.CircleImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/picture1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="小王"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="订单号:"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_odernubs_c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2141242141"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="评价:"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_commendss_c"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="这件衣服确实很好看呀.这件衣服确实很好看呀.这件衣服确实很好看呀."
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:id="@+id/ll_contain_stars_c"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" >
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_scores_c"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1分"
                            android:textSize="12sp"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_contain_ims_c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商品状态:"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_status_sd_c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="已发货"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_looklogist_custom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/newbtnbg"
                    android:gravity="center"
                    android:text="查看物流"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/im_tochat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/chat_small" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_tuik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/newbtnbg"
                android:gravity="center"
                android:padding="4dp"
                android:text="申请退款"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_arb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/newbtnbg"
                android:gravity="center"
                android:padding="4dp"
                android:text="申请退换货"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_suregetg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:background="@drawable/newbtnbg"
                android:gravity="center"
                android:padding="4dp"
                android:text="确认收货"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_prise_sc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:background="@drawable/newbtnbg"
                android:gravity="center"
                android:padding="4dp"
                android:text="评价"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_surepay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:background="@drawable/newbtnbg"
                android:gravity="center"
                android:padding="4dp"
                android:text="确认付款"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_cancleorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:background="@drawable/newbtnbg"
                android:gravity="center"
                android:padding="4dp"
                android:text="取消订单"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_notif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:background="@drawable/newbtnbg"
                android:gravity="center"
                android:padding="4dp"
                android:text="提醒发货"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_deletorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:background="@drawable/newbtnbg"
                android:gravity="center"
                android:padding="4dp"
                android:text="删除订单"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_looklogist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:background="@drawable/newbtnbg"
                android:gravity="center"
                android:padding="4dp"
                android:text="查看物流"
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/sgray" />

</LinearLayout>