<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <com.femto.ugershop.view.CircleImageView
                android:id="@+id/im_head_of"
                android:layout_width="56dp"
                android:layout_height="56dp" />

            <LinearLayout
                android:id="@+id/ll_store_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_name_of"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="吊牌"
                    android:textColor="@color/sblack"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_time_of"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:gravity="right"
                    android:text="2015-09-12"
                    android:textColor="@color/sblack"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单价:"
                    android:textColor="@color/sblack"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_price_of"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100元"
                    android:textColor="@color/sblack"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_nub_of"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="48dp"
                    android:text="x1"
                    android:textColor="@color/sblack"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="共"
                    android:textColor="@color/sblack"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_count_of"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="31"
                    android:textColor="@color/sblack"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="件,"
                    android:textColor="@color/sblack"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="合计:"
                    android:textColor="@color/sblack"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_allfee_of"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="27.6元" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:text="费用:"
                    android:textColor="@color/sblack"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_allmoney_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="27.6元"
                    android:textColor="@color/sblack"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/sgray" />

</LinearLayout>