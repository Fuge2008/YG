<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/ll_ppall"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_woman"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="女士"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/im_women"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/star_red" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_man"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="男士"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/im_man"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/star_red"
                android:visibility="invisible" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_up"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="上装"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/im_up"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/star_red" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_down"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="下装"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/im_down"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/star_red"
                android:visibility="invisible" />
        </RelativeLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/lv_poputwo"
        android:layout_width="120dp"
        android:layout_height="300dp"
        android:layout_marginLeft="1dp"
        android:background="@color/white"
        android:scrollbars="none" />

</LinearLayout>